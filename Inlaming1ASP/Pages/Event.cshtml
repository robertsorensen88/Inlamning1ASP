@page
@model Inlamning1ASP.Pages.EventModel

<h1>Events</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @item.Date.ToLongDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpotsAvailable)
            </td>
            <td>

                <a asp-page="./JoinEvent" class="bg-dark text-light rounded shadow p-2 text-decoration-none" asp-route-id="@item.Id">Join</a>
            </td>
            <td>
                <a asp-page="/Details" class="bg-dark text-light rounded shadow p-2 text-decoration-none" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
       
}
    </tbody>
</table>
